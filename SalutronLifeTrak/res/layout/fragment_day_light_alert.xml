<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="10dp" >

    <TableRow
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <Switch
            android:id="@+id/day_light_alert_switch_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:text="@string/status" />
    </TableRow>

    <TableRow>

        <View
            android:id="@+id/day_light_alert_line1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/day_light_exposure_level_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposure_level" />

        <TextView
            android:id="@+id/daylight_alert_exposure_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Medium"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_blue" />
    </TableRow>

    <TableRow>

        <View
            android:id="@+id/day_light_alert_line2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/day_light_exposure_duration_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exposure_duration" />
        <!--
             <TextView
            android:id="@+id/day_light_alert_exposure_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="1h 29 m"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_blue" 
            android:layout_weight="1"/>
        -->

        <LinearLayout
            android:id="@+id/day_light_alert_exposure_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/day_light_alert_exposure_duration_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_blue" />

            <TextView
                android:id="@+id/day_light_alert_h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" h "
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_blue" />

            <TextView
                android:id="@+id/day_light_alert_exposure_duration_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="00"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_blue" />

            <TextView
                android:id="@+id/day_light_alert_m"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text=" m"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/color_blue" />
        </LinearLayout>
    </TableRow>

    <TableRow>

        <View
            android:id="@+id/day_light_alert_line3"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/day_light_start_time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_time" />

        <TextView
            android:id="@+id/daylight_alert_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="7:00 AM"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_blue" />
    </TableRow>

    <TableRow>

        <View
            android:id="@+id/day_light_alert_line4"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/day_light_end_time_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_time" />

        <TextView
            android:id="@+id/daylight_alert_end_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="12:00 PM"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/color_blue" />
    </TableRow>

    <TableRow>

        <View
            android:id="@+id/day_light_alert_line5"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </TableRow>

    <TableRow
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/fragment_day_light_alert_frequency_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_frequency" />
        <!--
        <LinearLayout 
            	android:id="@+id/fragment_day_light_alert_frequency"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="right">
		        <TextView
		            android:id="@+id/day_light_alert_frequency"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            android:text="60"
		            android:textAppearance="?android:attr/textAppearanceSmall"/>
		        <TextView
		            android:id="@+id/day_light_alert_frequency_hint"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="right"
		            android:text="@string/minute"
		            android:textAppearance="?android:attr/textAppearanceSmall"/>
		        
		</LinearLayout>
        -->

        <LinearLayout
            android:id="@+id/fragment_day_light_alert_frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/day_light_alert_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:inputType="number"
                android:maxLength="3"
                
                android:singleLine="true"
                android:text="60"
                android:textAppearance="?android:attr/textAppearanceSmall"
                tools:ignore="LabelFor,HardcodedText" />

            <TextView
                android:id="@+id/textviewMinutesCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:text="@string/minute"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </TableRow>

    <TableRow>

        <SeekBar
            android:id="@+id/fragment_day_light_seekerbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:layout_weight="1"
            android:max="120" />
    </TableRow>

    <TableRow
        android:paddingBottom="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <TextView
            android:id="@+id/day_light_alert_frequency_min"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:text="5"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/day_light_alert_frequency_max"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:text="120"
            android:textSize="10sp" />
    </TableRow>

    <TableRow>

        <View
            android:id="@+id/day_light_alert_line6"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_span="2"
            android:layout_weight="1"
            android:background="@android:color/darker_gray" />
    </TableRow>

</TableLayout>