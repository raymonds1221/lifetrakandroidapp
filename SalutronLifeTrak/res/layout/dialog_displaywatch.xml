<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/display_always"
        style="@style/Button.transparent"
        android:gravity="center"
        android:text="@string/settings_notif_display_onwatch_always" />

    <View style="@style/Separator.Horizontal" />

    <Button
        android:id="@+id/display_whenawake"
        style="@style/Button.transparent"
        android:gravity="center"
        android:text="@string/settings_notif_display_onwatch_when_awake" />

    <View style="@style/Separator.Horizontal" />

    <Button
        android:id="@+id/cancel"
        style="@style/Button.transparent"
        android:gravity="center"
        android:text="@string/cancel" />

</LinearLayout>