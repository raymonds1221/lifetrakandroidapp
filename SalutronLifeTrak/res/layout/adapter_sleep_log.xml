<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/imgSleepIconBed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ll_fitnessres_sleep_icon_bed"
        android:contentDescription="@string/sleep_icon_bed" />
    <TextView 
        android:id="@+id/tvwSleepDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imgSleepIconBed"
        android:textStyle="bold" />
    <TextView 
        android:id="@+id/tvwSleepTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />
</RelativeLayout>
