<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/user_profile_content_padding"
                android:text="@string/status"
                android:textSize="@dimen/total_active_time_textsize" />

            <Switch
                android:id="@+id/switchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:padding="@dimen/user_profile_content_padding"
                android:textSize="@dimen/total_active_time_textsize" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:padding="@dimen/user_profile_content_padding"
                android:text="@string/wake_up_time"
                android:textSize="@dimen/total_active_time_textsize" />

            <TextView
                android:id="@+id/textviewWakeUpCall"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="right|center"
                android:padding="@dimen/user_profile_content_padding"
                android:textSize="@dimen/total_active_time_textsize" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:minHeight="40dp"
        android:weightSum="1" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="@dimen/user_profile_content_padding"
            android:text="@string/intelligent_wake_up_start"
            android:textSize="@dimen/user_profile_gender_textsize" />

        <EditText
            android:id="@+id/edittexttime"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="right|center"
            android:textSize="@dimen/total_active_time_textsize"
            tools:ignore="LabelFor,TextFields"
            android:maxLength="2"
            android:inputType="number" >
        </EditText>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="right|center"
            android:padding="@dimen/user_profile_content_padding"
            android:text="@string/minutes_earlier"
            android:textSize="@dimen/user_profile_gender_textsize" />
    </LinearLayout>

</LinearLayout>