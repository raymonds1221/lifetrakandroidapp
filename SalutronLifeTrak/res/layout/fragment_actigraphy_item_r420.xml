<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:padding="@dimen/pair_message_bottom_padding"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_active_time"
        android:textSize="@dimen/total_active_time_textsize" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/tvwActiveTimeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/total_active_time_hr_min_textsize" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/actigraphy_hr"
            android:textSize="@dimen/total_active_time_unit_textsize" />
        <TextView 
            android:id="@+id/tvwActiveTimeMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/total_active_time_hr_min_textsize" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actigraphy_min"
            android:textSize="@dimen/total_active_time_unit_textsize" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/frmActigraphyPlotContainer" 
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/ll_sleep_graph_bg_container" />
    <FrameLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/color_xaxis_bar">
       <TextView 
           android:id="@+id/tvwActigraphyStartTime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/hour_12_am"
           android:textSize="@dimen/fitness_results_am_pm"
           android:textColor="@android:color/black" />
       <TextView 
           android:id="@+id/tvwActigraphyEndTime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="right"
           android:text="@string/hour_11_pm"
           android:textSize="@dimen/fitness_results_am_pm"
           android:textColor="@android:color/black" />
   </FrameLayout>
</LinearLayout>
