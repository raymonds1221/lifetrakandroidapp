<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/imgPairDeviceSprite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitEnd"
        android:src="@drawable/ll_alert_devsetup_iphone4_circle_frame00"
        android:contentDescription="@string/pair_device_sprite" />

    <Button
        android:id="@+id/btnCancel"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:onClick="onButtonClick"
        android:text="@string/cancel_button_text"
        android:textColor="@color/color_gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnCancel"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/textView_content"
        android:paddingBottom="@dimen/pair_message_bottom_padding"
        android:paddingLeft="@dimen/pair_message_vertical_padding"
        android:paddingRight="@dimen/pair_message_vertical_padding"
        android:text="@string/pair_watch_message"
        android:textColor="@color/color_dark_gray"
        android:textSize="@dimen/pair_watch_message_textsize" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/pairingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pairing"
            android:layout_marginLeft="@dimen/pair_message_vertical_padding"
            android:layout_marginRight="@dimen/pair_message_vertical_padding"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_100_percent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/pair_message_vertical_padding"
            android:layout_marginRight="@dimen/pair_message_vertical_padding"
            android:gravity="center_horizontal|center_vertical"
            android:text="@string/pairing_instruction"
            android:textColor="@color/color_dark_gray" />

    </LinearLayout>
</RelativeLayout>