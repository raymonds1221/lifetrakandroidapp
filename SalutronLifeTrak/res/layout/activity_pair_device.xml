<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imgPairDeviceSprite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/pair_device_sprite"
        android:scaleType="fitEnd"
        android:src="@drawable/ll_alert_devsetup_iphone4_circle_frame00" />

    <LinearLayout
        android:id="@+id/lnrButtonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btnCancel"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:onClick="onButtonClick"
            android:text="@string/cancel_button_text"
            android:textColor="@color/color_gray" />

        <Button
            android:id="@+id/btnContinue"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:background="@android:color/transparent"
            android:onClick="onButtonClick"
            android:text="@string/continue_button_text"
            android:textColor="@color/color_green" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/lnrButtonContainer"
        android:gravity="center"
        android:paddingBottom="@dimen/pair_message_bottom_padding"
        android:paddingLeft="@dimen/pair_message_vertical_padding"
        android:id="@+id/textView_content"
        android:paddingRight="@dimen/pair_message_vertical_padding"
        android:text="@string/pair_watch_message"
        android:textSize="@dimen/pair_watch_message_textsize" />

    <TextView
        android:id="@+id/pairingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/pairing"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/color_100_percent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/pairingTextView"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/pairing_instruction"
        android:textColor="@color/color_dark_gray" />

</RelativeLayout>