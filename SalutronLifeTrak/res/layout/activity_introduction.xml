<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/pgrIntroduction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/idrIntroIndicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        app:radius="4dp"
        app:fillColor="@color/color_fill_indicator"
        app:pageColor="@color/color_page_indicator" />
    <LinearLayout 
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/btnSignup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/signup"
            android:contentDescription="@string/signup"
            android:textColor="@android:color/white"
	        android:background="@drawable/selector_long_button"
            android:onClick="onSignupClick" />
        <View 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/white" />
         <Button 
            android:id="@+id/btnSignin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/signin"
            android:contentDescription="@string/signin"
            android:textColor="@android:color/white"
	        android:background="@drawable/selector_long_button"
            android:onClick="onSigninClick" />
    </LinearLayout>
