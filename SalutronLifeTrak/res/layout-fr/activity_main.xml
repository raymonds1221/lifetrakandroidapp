<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/sync_view_margin_top">
    <ImageView 
        android:id="@+id/imgLifeTrakLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/welcome_vertical_margin"
        android:src="@drawable/lifetrak_logo"
        android:contentDescription="@string/lifetrak_logo" />
    <TextView
        android:id="@+id/tvwChooseDevice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgLifeTrakLogo"
        android:layout_marginBottom="@dimen/welcome_vertical_margin"
        android:gravity="center_horizontal"
        android:text="@string/choose_watch" />
    <Button 
        android:id="@+id/btnConnectNewWatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_alignParentBottom="true"
        android:drawableLeft="@drawable/welcome_button_add"
        android:drawablePadding="-10dp"
        android:paddingLeft="20dp"
        android:text="@string/connect_a_new_watch"
        android:textColor="@android:color/white"
        android:minHeight="50dp"
        android:background="@color/color_green"
        android:onClick="onConnectNewWatchClicked" />
    <ListView 
        android:id="@+id/lstWatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvwChooseDevice"
        android:layout_above="@id/btnConnectNewWatch"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin" />
</RelativeLayout>
