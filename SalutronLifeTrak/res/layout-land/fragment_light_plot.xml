<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:padding="@dimen/pair_message_bottom_padding"
        android:weightSum="3" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/fitness_resuls_stats_margin_vertical"
            android:layout_weight=".6" >

            <Button
                android:id="@+id/buttonSchedule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/light_plot_land_button"
                android:gravity="center"
                android:text="DAILY"
                tools:ignore="HardcodedText" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="October 20, 2014"
                android:textSize="@dimen/year_textsize"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BRIGHT LIGHT EXPOSURE"
                android:textSize="@dimen/sync_status_textsize"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textViewHour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="@dimen/fitness_results_stat_metric_value_textsize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="hr"
                    android:textSize="@dimen/sync_status_textsize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewMin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fitness_landscape_stats_margin"
                    android:text="20"
                    android:textSize="@dimen/fitness_results_stat_metric_value_textsize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:text="min"
                    android:textSize="@dimen/sync_status_textsize"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/light_plot_land_circle_orange"
                    android:minWidth="130dp"
                    android:text="ALL LIGHT"
                    android:textSize="@dimen/calendar_day_textsize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewAllLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="856.58 LX"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/light_plot_land_circle_blue"
                    android:minWidth="130dp"
                    android:text="BLUE RICH LIGHT"
                    android:textSize="@dimen/calendar_day_textsize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewBlueRichLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="856.58 LX"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/light_plot_land_circle_gray"
                    android:minWidth="130dp"
                    android:text="WRIST-OFF"
                    android:textSize="@dimen/calendar_day_textsize"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/textViewWristOff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="856.58 LX"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <!-- 
    Schedule = buttonSchedule
    Date = textViewDate
    Hour = textViewHour
    Min = textViewMin
    AllLight Value = textViewAllLight
    BlueRichLight Value = textViewBlueRichLight
    WristOff Value = textViewWristOff
    --> 

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true" >
	<!-- Plot here --> 
    </LinearLayout>

</RelativeLayout>